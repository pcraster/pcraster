def createCppTestDriver(
        stream):
    stream.write("""\
// DO NOT EDIT
// Created by $PCRTREE2's PCRasterSample.py.
""")
    for k in _sample_collection.keys():
        s = _sample_collection[k]
        if not s.random:
            s.createCppTest(stream, fileNameOfDataFile)

